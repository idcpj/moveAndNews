/* pages/posts/post-detail/post-detail.wxss */
.container{
    display: flex;
    flex-direction: column;
}
.header-image{
    width: 100%;
    height: 460rpx;
}

.music{
    width: 150rpx;
    height: 150rpx;
    position: absolute;
    left: 50%;
    margin-left: -75rpx;
    top: 180rpx;
    opacity: 0.6

}
.author-data{
    flex-direction: row;
    margin-left: 30rpx;
    margin-top: 20rpx;
}
.avatar{
    height: 64rpx;
    width: 64rpx;
    vertical-align: middle;
}
.author{
    font-size: 30rpx;
    font-weight: 300;
    margin-left: 20rpx;
    vertical-align: middle;
    color: #666;
}
.const-text{
    font-size: 24rpx;
    color: #999;
    margin-left: 20rpx;
}
.date{
    font-size: 24rpx;
    margin-left: 30rpx;
    vertical-align: middle;
    color: #999;
}
.title{
    margin-left: 40rpx;
    font-size: 36rpx;
    font-weight: 700rpx;
    margin-top: 30rpx;
    letter-spacing: 2px;
    color: #4b556c;
}
.tool{
    margin-top: 20rpx;
}
.circle-img{
    display: flex;
    justify-content:flex-end;
    align-items: center ; 
    margin-right: 40rpx;
    vertical-align: middle;
}
.circle-img image{
    width: 64rpx;
    height: 64rpx;
    margin-left: 10rpx;
}
.horizon{
    width: 660rpx;
    height: 2rpx;
    background-color: #e5e5e5;
    vertical-align: middle;
    position: relative;
    top: -35rpx;
    margin: 0 auto;
    z-index: -99;
}
.detail{
    color: #666;
    margin-left: 30rpx;
    margin-top: 20rpx;
    margin-right: 30rpx;
    line-height: 44rpx;
    letter-spacing: 2px;
}
