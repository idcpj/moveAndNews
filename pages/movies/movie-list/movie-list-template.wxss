/* pages/movies/movie-list/mov.wxss */

@import '../movie/movie-template.wxss';

.movie-list-container{
    background-color: #fff;
     display: flex; 
     flex-direction: column; 
}
.movie-head{
    padding: 30rpx 20rpx 22rpx; 
}
.movie-head>text{
    font-size: 32rpx;
    color: #888;
}
.more{
    float: right;
}
.more >text{
    vertical-align: middle;
    margin-right: 10rpx;
    color: #1f4ba5;
}

.more >image{
    width: 20rpx;
    height: 20rpx;
    vertical-align: middle;
    margin-right: 20rpx;
}
.movies-container{
    display: flex;
    flex-direction: row;
    justify-content:space-around;

}